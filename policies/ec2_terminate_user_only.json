{
  "Version": "2012-10-17",
  "Statement": [
    {
	  "Sid": "AllowListEC2Instances",
      "Effect": "Allow",
      "Action": [
	  	"ec2:Describe*"
	  ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
		"ec2:StartInstaces",
		"ec2:StopInstances",
	    "ec2:RebootInstances",
		"ec2:TerminateInstances"
	  ],
      "Resource": [
	  	"arn:aws:ec2:us-west-2:*:instance",
	  	"arn:aws:ec2:us-west-2:*:instance/*"
	  ],
      "Condition": {
	  	"StringEquals": {"ec2:ResourceTag/User": "${aws:username}"}
	  }
    }
  ]
}
